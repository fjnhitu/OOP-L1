#include <iostream>
 using namespace std;

 int main() {
    int n;

    cout << "Enter an odd integer: ";
    cin >> n;

    int mid = n / 2;

    for (int i = -mid; i <= mid; i++) {
        for (int j = 0; j < abs(i); j++) {
            cout << " ";
        }
        for (int k = 0; k < (n - 2 * abs(i)); k++) {
            cout << "*";
        }
        cout << endl;
    }

    return 0;

 }
